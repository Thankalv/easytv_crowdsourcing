    var taskId = '<%- videoAnnot.id %>';
</script>
<div class="content-wrapper">
    <section class="content-header">
        <h1> Sign Language Multilingual Database </h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/"><i class="fa fa-home"></i>Home</a></li>
            <li class="breadcrumb-item active"> Pending Tasks - Concept Video </li>
        </ol>
    </section>
    
    <section class="content">
            <br><br>
                <div class="col-md-8 card  offset-md-2" style="background: #c8e6ff;">
                    <div class="card-header border-transparent" >
                        <h3 class="card-title"> <b> Adding new concept </b> </h3>
                        <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="x_content">
                            <%- include taskSteps %>
                            <br>
                    
                            <% if (!videoAnnot.finished)  { %>
                            <p> Upload the Motion-Capture data in <b> FBX format </b>
                                <button id="submit-mocap" style="background: dodgerblue; font-family: cursive;"> <i class="glyphicon glyphicon-upload" ></i> Submit</button> </p>
                                <form method='POST' action='/task/uploadmocap' class="dropzone" id="my-dropzone-1" 
                                    style="width: 50%; margin-left: 25%;background: #9addff;border: 3px dashed rgba(0, 0, 0, 0.3);">
                                </form>
                            <% } else  { %>
                                <div class="row offset-md-3">
                                    <h2 style="color:green" class="headline"> 
                                        <i class="fa fa-check-circle"></i></h2>
                                    <h3 style="color:green">
                                        This task is completed!
                                    </h3>
                                </div>
                                <a id="show-avatar" href="/video-annotation/show-mocap?id=<%- videoAnnot.id %>" class="btn" 
                                    style="display:block; color:midnightblue; border-color: blue; background: #00a6c2cf; font-weight: 500;margin-left:auto;margin-right:auto; width: 40%;">
                                    <i class="fa fa-street-view" style="font-size: 22px;color: #33f5f5d1;"></i> 3D Avatar
                                </a>
                            <% } %>
                            <br>
                        </div>
                    </div>
                
                    <a id="show-avatar" href="/video-annotation/show-mocap?id=" class="btn" 
                        style="display:none; color:midnightblue; border-color: blue; background: #00a6c2cf; font-weight: 500;margin-left:auto;margin-right:auto; width: 40%;">
                        <i class="fa fa-street-view" style="font-size: 22px;color: #33f5f5d1;"></i> 3D Avatar
                    </a>
                </div>
    </section>
</div>
    
    
