<div class="content-wrapper">

    <section class="content-header">
            <h1> Suggested translation</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/"><i class="fa fa-home"></i>Home</a></li>
                <li class="breadcrumb-item active"> <a href="/video-annotation/show-translations"> Suggest new translation</a></li>
            </ol>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="col-md-12">
            <div class="row">
                    <div class="col-md-6 card" style="background: aliceblue; height:600px">
                        <div class="card-header border-transparent" style="background-color: #3270daba">
                            <h3 class="card-title"> <b>Source Video - <%= videoInput.lang %></b> </h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                                <div class="row" style="margin: auto;">
                                    <div class="col-md-12" style="min-height: 240px;">
                                        <video id="the_video" class="video-js" controls preload="auto" width="90%" style="min-width:210px" data-setup="{}">
                                            <source src="<%= videoInput.videoURL %>" type='video/mp4'>
                                         </video>
                                          <div class="info-box">
                                            <div class="info-box-content">
                                              <span class="info-box-text"> <b> <%= videoInput.lang %></b> concept: <%= videoInput.sle %></span> <br>
                                            </div>
                                          </div>

                                          <h5>Annotation in <b>Sign-Language order</b> </h5>
                                          <div class="console-container">
                                            <div class="sourceConsole" style="font-size:12px"></div>
                                          </div>
                                          <% if (videoInput.mocapURL!="")  { %>
                                            <a id="show-avatar1" href="/video-annotation/show-mocap?id=<%- videoInput.id %>" class="btn"
                                              data-toggle="tooltip" data-placement="right" title="There is mocap-data uploaded for this submission"
                                              style="display:block; color:midnightblue; border-color: blue; background: #3adefbcf; font-weight: 500;margin-left:0%;margin-top:5px;margin-right:auto; width: 30%;">
                                              <i class="fa fa-street-view" style="font-size: 22px;color: midnightblue;"></i> 3D Avatar
                                            </a>
                                            <% } %>
                                    </div>
                                    <div class="clearfix hidden-md-up"></div>
                                </div>
                        </div>
                    </div>
                
                    <div class="col-md-6 card" style="background: aliceblue; height:600px" >
                        <div class="card-header border-transparent" style="background-color: #3270daba">
                            <h3 class="card-title"> <b>Suggested Translation - <%= videoTransl.lang %></b> </h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                                <div class="row" style="margin: auto;">
                                    <div class="col-md-12" style="min-height: 240px;">
                                         <video id="the_video2" class="video-js" controls preload="auto" width="90%" style="min-width:210px"  data-setup="{}">
                                            <source src="<%= videoTransl.videoURL %>" type='video/mp4'>
                                         </video>
                                          <div class="info-box">
                                            <div class="info-box-content">
                                              <span class="info-box-text"> <b> <%= videoTransl.lang %></b> concept: <%= videoTransl.sle %></span> <br>
                                            </div>
                                          </div>
                                          <h5>Annotation in <b>Sign-Language order</b> </h5>
                                          <div class="console-container">
                                            <div class="targetConsole" style="font-size:12px"></div>
                                          </div>
                                          <% if (videoTransl.mocapURL!="")  { %>
                                            <a id="show-avatar1" href="/video-annotation/show-mocap?id=<%- videoTransl.id %>" class="btn"
                                              data-toggle="tooltip" data-placement="right" title="There is mocap-data uploaded for this submission"
                                              style="display:block; color:midnightblue; border-color: blue; background: #3adefbcf; font-weight: 500;margin-left:0%;margin-top:5px;margin-right:auto; width: 30%;">
                                              <i class="fa fa-street-view" style="font-size: 22px;color: midnightblue;"></i> 3D Avatar
                                            </a>
                                            <% } %>
                                    </div>
                                    <div class="clearfix hidden-md-up"></div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>

            <% if (session.User.usertype == "Evaluator") { %>
            <div class="col-md-8 offset-md-2">
                  <div class="card card-primary">
                    <div class="card-header" style="background: #ff8800">
                      <h3 class="card-title">Evaluate this task</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">

                      <div class="row margin">
                        <div class="col-sm-12">
                          <input id="range_6" type="text" name="range_6" value="">
                        </div>
                      </div>

                    </div>
                    <!-- /.card-body -->
                  <!-- /.card -->
                </div>

                <button id="post-validation" class="btn centerButton post-button" style="color:midnightblue; border-color: blue; background: #00a6c2cf; font-weight: 500;"> 
                    <i class="material-icons" style="display: inline-flex; vertical-align: middle;">check</i>  Submit
                  </button> 
              </div>
              <% } else { %>
                <button id="play-video" class="btn centerButton post-button" style="color:midnightblue; border-color: blue; background: #00a6c2cf; font-weight: 500;width:20%"> 
                    <i class="material-icons" style="display: inline-flex; vertical-align: middle;">play_arrow</i>  Both Videos
