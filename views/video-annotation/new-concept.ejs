<script type="text/javascript">
    var clang = '<%= lang %>';
    var taskId = '<%= taskId %>';
</script>

<div class="content-wrapper">
    <section class="content-header">
        <h1> Sign Language Multilingual Database </h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/"><i class="fa fa-home"></i>Home</a></li>
            <li class="breadcrumb-item active"> Pending Tasks - Concept Video </li>
        </ol>
    </section>
    
    <section class="content">
            <br><br>
                <div class="col-md-8 card  offset-md-2" style="background: aliceblue;">
                    <div class="card-header border-transparent" >
                        <h3 class="card-title"> <b> Adding new concept </b> </h3>
                        <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="x_content">
                            <%- include taskSteps %>
                            <br>
                            <div class="row col-md-10 offset-md-1">
                                <div class="form-group col-md-8">
                                    <div class="console-container" style="margin-top: 5px;">
                                        <% if (!concept)  { %>
                                        <input type="concept" class="form-control targetConsole" style="padding: 5px;" placeholder="Concept in Natural Language" id="concept" required>
                                        <% } else { %>
                                            <input type="concept" class="form-control targetConsole" style="padding: 5px;" placeholder="Concept in Natural Language" id="concept" value="<%= concept %>" required disabled>
                                        <% } %>
                                    </div>
                                </div>
                                <% if (!lang)  { %>
                                <select class="btn post-button" id="clang" style="background: #5fa6e4; display: inline-block!important;" required>
                                    <option class="placeholder" selected disabled value=""> Select Lang </option> 
                                    <% _.each(translLangs, function(lang) { %>
                                        <option value="<%= lang[1] %>"> <%= lang[0] %>
                                        </option>
                                    <% }); %>
                                </select>
                                <% } else { %>
                                <select class="btn post-button" id="clang" style="background: #5fa6e4; display: inline-block!important;" required disabled>
                                     <option class="placeholder" selected disabled value="<%= lang %>"> in <%= language %></option>
                                    </select>
                                <% } %>
                            </div>
                            <p style="margin-left: 8.333333%;"> Upload Sign-Language video for your concept
                                <button id="submit-videos" class="btn-success"> <i class="glyphicon glyphicon-upload" ></i> Submit</button> </p>
                                <form method='POST' action='/task/uploadvideo' class="dropzone" id="my-dropzone-1" 
                                    style="width: 50%; margin-left: 25%;background: #9addff;border: 3px dashed rgba(0, 0, 0, 0.3);">
                                </form>
                            <br>
                        </div>
                    </div>

                    <a id="next-annotate" href="/video-annotation/annotate-new?id=" class="btn" 
                        style="display:none; color:midnightblue; border-color: blue; background: #00a6c2cf; font-weight: 500;margin-left:auto;margin-right:auto; width: 40%;">
                        <i class="fa fa-edit"></i>Annotate
                    </a>
                </div>
    </section>
</div>
    
