
<div class="content-wrapper">

    <section class="content-header">
            <h1> Sign Language Multilingual </h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="/"><i class="fa fa-home"></i>Home</a></li>
                <li class="breadcrumb-item"> Video Translation</a></li>
            </ol>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="col-md-10 offset-md-2">
            <div class="row">
                    <div class="col-md-8 card" style="background: aliceblue;">
                        <div class="card-header border-transparent" style="background-color: #3270daba">
                            <h3 class="card-title"> <b> Not-segmented video </b> </h3>
                            <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                                <div class="row" style="margin: auto;">

                                    <div id="alertbox"></div>

                                        <div class="col-md-12">
                                          <div class="info-box">
                                            <span class="info-box-icon bg-info elevation-1" style="width: 175px;height: auto;">
                                                <video controls preload="metadata" width="95%" height="95%" >
                                                   <source src="<%= videoTranslation.videoURL %>" type='video/mp4'>
                                                </video>
                                            </span>
                                            <div class="info-box-content">
                                              <span class="info-box-text"> # <%= videoTranslation.sle %> <b>  </b></span> <br>
                                              <a href="/video-annotation/annotate?id=<%= videoTranslation.id %>"><i class="fa fa-edit"></i> + Video Segmentation</a>
                                            </div>
                                          </div>
                                        </div>
                                        <div class="clearfix hidden-md-up"></div>
                                        <a href="/video-annotation/get-translation?targetLang=<%= source.targetLang %>&videoURI=<%= source.videoURI %>&id=<%- source.id %>&anyway=true" 
                                            class="btn centerButton post-button" style="color:midnightblue;border-color: blue; background: #00a6c2cf;font-weight:500;width:50%;margin-left:25%;"> 
                                            <i class="fa fa-eye"></i> show the translation anyway
                                         </a>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

