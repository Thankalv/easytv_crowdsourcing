
<div class="content-wrapper">
     <section class="content-header">
         <h1> <%= __('organisation.new.title') %> </h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/"><i class="fa fa-home"></i>Home</a></li>
                <li class="breadcrumb-item active">  <%= __('organisation.new.title') %> </li>
            </ol>
    </section>

   <section class="content">
        <div class="col-md-10 offset-md-1">
    
        <div class="box box-primary box-solid">
            <div class="box-header with-border">
            <h3 class="box-title"> <%= __('organisation.new.createOrg') %></h3>
            </div>
    
            <form action="/organisation/create" method="POST" id="new-organisation-form">
    
                <div class="box-body">
                    <div class="form-group">
                    <label for="name"> <%= __('organisation.new.name') %> </label>
                    <input type="text" class="form-control" placeholder="<%= __('organisation.new.name') %>" name="name" <%= __('organisation.new.rq') %> >
                    </div>
        
                    <div class="form-group">
                    <label for="description"> <%= __('organisation.new.descr') %> </label>
                    <textarea id="description" name="description" class="textarea form-control" placeholder="<%= __('organisation.new.orgDescr') %> "></textarea>
                    </div>
                </div>
        
                <div class="box-footer">
                    <button type="submit" class="btn btn-flat btn-sm btn-success pull-right"> <%= __('organisation.new.create') %> </button>
                </div>
    
            </form>
    
        </div>
    
        </div>
    </section>
</div>

