

<div class="content-wrapper">
    <section class="content">
       
        <div class="col-md-6 offset-md-3" style="opacity: 0.7;">
        
            <div class="card card-primary" style="margin-top: 120px">
                <div class="card-header with-border" style="background: #6ca8e9 !important;">
                    <h3 class="card-title "> <i class="fa fa-sign-in"></i> Sign In </h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
            
                    <form class="form-horizontal" action="/session/create" method="POST" role="form">
                
                        <div class="card-body" >
                        <div class="form-group has-feedback">
                            <label for="username" class="col-sm-2 control-label"> email </label>
                            <div class="col-sm-10">
                            <input class="form-control" name="username" id="username" placeholder="email" type="email" required autofocus>
                            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                            </div>
                        </div>
                        <div class="form-group has-feedback">
                            <label for="password" class="col-sm-2 control-label"> password </label>
                            <div class="col-sm-10">
                            <input class="form-control" name="password" id="password" placeholder="password" type="password" required>
                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                            </div>
                        </div>
                        </div>
                        <!-- /.box-body -->
                
                        <div class="card-footer">
                        <!-- <div><a href="#"> <%= __('session.new.forgotPassw') %> </a></div> -->
                        <div><a href="/user/new-user" style="font-weight: bolder;"> <%= __('session.new.registerNew') %> </a></div>
                            <button type="submit" class="btn btn-success btn-flat pull-right"> Submit</button>
                            <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                        </div>
                
                    </form>
                </div>
        </div>
    </section>
</div>


<script type="text/javascript">
    var welcome = <%- welcome %>;

    function swalModal() { 
        Swal.fire({
                type: 'success',
                title: 'Thank you for registering',
                text: 'You need to confirm your email!'
           });
      }
  
    if (welcome==true)
        setTimeout(function(){ swalModal("Hello"); }, 700);
  
  </script>
  
  <!-- sweetalert modals -->
  <% block('localScripts', '<link href="/plugins/sweetalert/sweetalert2.min.css" rel="stylesheet" type="text/css">') %>
  <% block('localScripts', '<script src="/plugins/sweetalert/sweetalert2.min.js"></script>') %>