
<div class="modal fade" id="modal-lg<%= job.job_id %>">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body">
                <div class="card">
                    <div class="card-header border-0">
                        <h3 class="card-title"> Title: <b>  <%- UtilService.truncStripTags( job.asset_name.replace("'", "") , 60) %>  </b> </h3>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-striped table-valign-middle">
                        <thead>
                        <tr>
                            <th>User</th>
                            <th>At</th>
                            <th>Viewed %</th>
                            <th>Edited %</th>
                            <th>Validated %</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% _.each(job.progress, function(progr) { %>
                            <tr>
                            <td> <% if(progr.worker) { %> <%= User.fullName(progr.worker) %>  <% } else { %> <span style="font-style: italic;color:rgb(194, 179, 179)"> deleted user? </span>  <% } %> </td>
                            <td> <%= UtilService.fromNow(progr.createdAt) %> </td>
                            <td> <span  class="mr-1" style="color:orange"> <%= progr.viewed_percent.toFixed(1) %>% </span> </td>
                            <td> <%= progr.edited_percent.toFixed(1) %>% </td>
                            <td>  <span  class="text-success mr-1"> <%= progr.validated_percent.toFixed(1) %>% </span> </td>
                        </tr>
                        <% }); %>
                        </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



